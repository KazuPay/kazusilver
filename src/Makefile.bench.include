bin_PROGRAMS += bench/bench_kazusilver
BENCH_SRCDIR = bench
BENCH_BINARY = bench/bench_kazusilver$(EXEEXT)


bench_bench_kazusilver_SOURCES = \
  bench/bench_kazusilver.cpp \
  bench/bench.cpp \
  bench/bench.h \
  bench/Examples.cpp \
  bench/rollingbloom.cpp \
  bench/crypto_hash.cpp \
  bench/base58.cpp

bench_bench_kazusilver_CPPFLAGS = $(AM_CPPFLAGS) $(KSLVCOIN_INCLUDES) $(EVENT_CLFAGS) $(EVENT_PTHREADS_CFLAGS) -I$(builddir)/bench/
bench_bench_kazusilver_CXXFLAGS = $(AM_CXXFLAGS) $(PIE_FLAGS)
bench_bench_kazusilver_LDADD = \
  $(LIBKSLVCOIN_SERVER) \
  $(LIBKSLVCOIN_COMMON) \
  $(LIBKSLVCOIN_UTIL) \
  $(LIBKSLVCOIN_CONSENSUS) \
  $(LIBKSLVCOIN_CRYPTO) \
  $(LIBLEVELDB) \
  $(LIBMEMENV) \
  $(LIBSECP256K1) \
  $(LIBUNIVALUE)

if ENABLE_ZMQ
bench_bench_kazusilver_LDADD += $(LIBKSLVCOIN_ZMQ) $(ZMQ_LIBS)
endif

if ENABLE_WALLET
bench_bench_kazusilver_LDADD += $(LIBKSLVCOIN_WALLET)
endif

bench_bench_kazusilver_LDADD += $(BOOST_LIBS) $(BDB_LIBS) $(SSL_LIBS) $(CRYPTO_LIBS) $(MINIUPNPC_LIBS) $(EVENT_PTHREADS_LIBS) $(EVENT_LIBS)
bench_bench_kazusilver_LDFLAGS = $(RELDFLAGS) $(AM_LDFLAGS) $(LIBTOOL_APP_LDFLAGS)

CLEAN_KSLVCOIN_BENCH = bench/*.gcda bench/*.gcno

CLEANFILES += $(CLEAN_KSLVCOIN_BENCH)

kazusilver_bench: $(BENCH_BINARY)

bench: $(BENCH_BINARY) FORCE
	$(BENCH_BINARY)

kazusilver_bench_clean : FORCE
	rm -f $(CLEAN_KSLVCOIN_BENCH) $(bench_bench_kazusilver_OBJECTS) $(BENCH_BINARY)
